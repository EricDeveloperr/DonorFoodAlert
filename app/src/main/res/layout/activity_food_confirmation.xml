<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodConfirmation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name:"
            android:textSize="35dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/foodNameInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="35dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/descriptionInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <RadioButton
            android:id="@+id/veganRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetarian"
            android:textSize="30dp"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="30dp"/>

        <RadioButton
            android:id="@+id/meatRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:textSize="30dp"
            android:layout_marginTop="450dp"
            android:layout_marginLeft="30dp"/>

        <RadioButton
            android:id="@+id/bothRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both Meat and Vegetables included"
            android:textSize="30dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="30dp"/>

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="617dp"
            android:layout_centerHorizontal="true"
            android:text="Confirm"
            android:textSize="20dp" />

    </RelativeLayout>
</ScrollView>
